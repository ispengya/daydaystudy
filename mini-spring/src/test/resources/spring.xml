<?xml version="1.0" encoding="UTF-8"?>
<beans>
        <bean id="userService" class="com.ispengya.framework.test.bean.UserService"/>

        <bean class="com.ispengya.framework.aop.support.DefaultAdvisorAutoProxyCreator"/>

        <bean id="beforeAdvice" class="com.ispengya.framework.test.bean.UserServiceBeforeAdvice"/>

        <bean id="methodInterceptor" class="com.ispengya.framework.aop.support.MethodBeforeAdviceInterceptor">
                <property name="advice" ref="beforeAdvice"/>
        </bean>

        <bean id="pointcutAdvisor" class="com.ispengya.framework.aop.support.AspectJExpressionPointcutAdvisor">
                <property name="expression" value="execution(* com.ispengya.framework.test.bean.IUserService.*(..))"/>
                <property name="advice" ref="methodInterceptor"/>
        </bean>

</beans>